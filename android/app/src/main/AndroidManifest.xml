<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        tools:targetApi="31">

        <!-- Main Activity - runs in main process with PWA and WebView -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleInstancePerTask"
            android:alwaysRetainTaskState="true"
            android:excludeFromRecents="false"
            android:finishOnTaskLaunch="false"
            android:clearTaskOnLaunch="false"
            android:stateNotNeeded="false"
            android:noHistory="false"
            android:allowTaskReparenting="false"
            android:taskAffinity="com.frostr.igloo.MAIN"
            android:process=":main"
            android:documentLaunchMode="intoExisting"
            android:relinquishTaskIdentity="false"
            android:lockTaskMode="if_whitelisted">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Handle update app shortcut -->
            <intent-filter>
                <action android:name="com.frostr.igloo.UPDATE_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!-- Invisible NIP-55 Handler - lightweight intent handler in separate process -->
        <activity
            android:name=".InvisibleNIP55Handler"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:taskAffinity="com.frostr.igloo.HANDLER"
            android:process=":native_handler"
            android:launchMode="singleTop"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:stateNotNeeded="true">

            <!-- Handle nostrsigner: URLs -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="nostrsigner" />
            </intent-filter>

        </activity>

        <!-- Keep-Alive Service for NIP-55 Handler Process -->
        <service
            android:name=".Nip55KeepAliveService"
            android:process=":native_handler"
            android:foregroundServiceType="shortService"
            android:exported="false" />

        <!-- NIP-55 Content Provider for background signing -->
        <provider
            android:name=".IglooContentProvider"
            android:authorities="com.frostr.igloo.signing"
            android:process=":native_handler"
            android:exported="true"
            android:grantUriPermissions="false"
            android:multiprocess="false" />

    </application>
</manifest>